---
title: Projects
layout: base.njk
---

<h1 class="title is-3 mb-4">Projects</h1>

<div class="columns is-multiline is-variable is-6">
  {% for project in collections.projects %}
    <div class="column is-half-tablet">
      <a href="{{ project.url }}" class="card is-flex is-flex-direction-column is-full-height has-text-grey-darker">
        <div class="card-image">
          {% if project.data.image %}
            <figure class="image is-16by9">
              <img src="{{ project.data.image }}" alt="{{ project.data.title }}">
            </figure>
          {% endif %}
        </div>
        <div class="card-content is-flex is-flex-direction-column">
          <h2 class="title is-4 mb-6">{{ project.data.title }}</h2>
          <p class="subtitle is-6 mb-8">{{ project.data.summary }}</p>
          {% if project.data.tools %}
            <div class="tags mt-auto">
              {% for tool in project.data.tools %}
                <span class="tag is-info">{{ tool }}</span>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </a>
    </div>
  {% endfor %}
</div>